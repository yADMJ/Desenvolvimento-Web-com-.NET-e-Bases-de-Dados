@page
@model ProductCatalog.Pages.AddProductModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Produto</title>
</head>
<body>
    <h1>Cadastro de Produto</h1>

    <form method="post">
        <div>
            <label for="Nome">Nome:</label>
            <input type="text" id="Nome" name="Nome" value="@Model.Nome" />
        </div>

        <div>
            <label for="Preco">Preço:</label>
            <input type="number" id="Preco" name="Preco" value="@Model.Preco" step="0.01" />
        </div>

        <button type="submit">Cadastrar</button>
    </form>

    @if (Model.IsSubmitted)
    {
        <h2>Dados Cadastrados:</h2>
        <p><strong>Nome:</strong> @Model.Nome</p>
        <p><strong>Preço:</strong> @Model.Preco</p>
    }
</body>
</html>
