<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TurismoApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>TurismoApp</h1>
        <nav>
            <a asp-page="/Index">Início</a> |
            <a asp-page="/CityManager/CreateCity">Criar Cidade</a> |
            <a asp-page="/CountryManager/CreateCountry">Criar País</a> |
            <a asp-page="/CountryManager/CreateMultipleCountries">Vários Países</a> |
            <a asp-page="/Notes/SaveNote">Nova Nota</a> |
            <a asp-page="/Notes/ReadNotes">Notas</a>
        </nav>
        <hr />
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
